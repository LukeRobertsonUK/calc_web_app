
<div class= "input">
  <h2>Input:</h2>
  <form action='/bmi' method='get'>
    <table class="inputs">
      <tr>
        <td>Weight:</td>
        <td><input type='float' name='weight'></td>
        <td>Units:</td>
        <td>
            <select name='weight_unit'>
                <option value = 'kg'>kg</option>
                <option value= 'pounds'>Ibs</option>
            </select>
          </td>
      </tr>
      <tr>
          <td>Height:</td>
          <td><input type= 'float' name='height'></td>
          <td>Units:</td>
          <td>
              <select name='height_unit'>
                  <option value='cm'>cm</option>
                  <option value='inches'>inches</option>
              </select>
          </td>
       </tr>
</table>
<button>CalcIT!</button>
</form>
</div>

<% if @result %>
<div class="results">
  <h2>Output:</h2>
    <p>Your BMI is <%=@result.round(2) %></p>
</div>
<% end %>
